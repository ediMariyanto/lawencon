<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barang.Barang">

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_tambah_barang"
        android:layout_width="@dimen/_100sdp"
        android:background="@drawable/corner_button_login"
        android:text="@string/tambah"
        android:layout_margin="@dimen/_20sdp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/btn_tambah_barang"
        android:id="@+id/rcv_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_barang" />



</RelativeLayout>